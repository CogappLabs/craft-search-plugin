{% extends "search-index/_layouts/plugin" %}

{% set title = "Search Indexes" %}
{% set selectedSubnavItem = 'indexes' %}

{% block actionButton %}
    <a href="{{ url('search-index/indexes/new') }}" class="btn submit">New Index</a>
{% endblock %}

{% block content %}
    {% if indexes|length %}
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Handle</th>
                    <th>Engine</th>
                    <th>Sections</th>
                    <th>Documents</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in indexes %}
                    {% set index = item.index %}
                    <tr>
                        <td>
                            <a href="{{ url('search-index/indexes/' ~ index.id) }}">
                                <strong>{{ index.name }}</strong>
                            </a>
                        </td>
                        <td><code>{{ index.handle }}</code></td>
                        <td>
                            {% set engineClass = index.engineType %}
                            {{ engineClass ? engineClass|split('\\')|last : '-' }}
                        </td>
                        <td>
                            {% if index.sectionIds %}
                                {% for sectionId in index.sectionIds %}
                                    {% set section = craft.app.entries.getSectionById(sectionId) %}
                                    {% if section %}
                                        <span class="token">{{ section.name }}</span>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <span class="light">All</span>
                            {% endif %}
                        </td>
                        <td>{{ item.docCount ?? '-' }}</td>
                        <td>
                            {% if index.enabled %}
                                <span class="status green"></span> Enabled
                            {% else %}
                                <span class="status"></span> Disabled
                            {% endif %}
                        </td>
                        <td class="thin">
                            <div class="flex">
                                <a href="{{ url('search-index/indexes/' ~ index.id ~ '/fields') }}" class="btn small" title="Field Mappings">Fields</a>
                                <button class="btn small" data-action="sync" data-id="{{ index.id }}" title="Re-index all entries">Sync</button>
                                <button class="btn small" data-action="flush" data-id="{{ index.id }}" title="Clear all documents">Flush</button>
                                <button class="btn small" data-action="delete" data-id="{{ index.id }}" title="Delete index">
                                    <span class="visually-hidden">Delete</span>
                                    <span data-icon="remove"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="zilch">No indexes yet. <a href="{{ url('search-index/indexes/new') }}">Create one.</a></p>
    {% endif %}
{% endblock %}

{% js %}
document.querySelectorAll('[data-action]').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
        e.preventDefault();
        var action = this.dataset.action;
        var id = this.dataset.id;

        if (action === 'delete' && !confirm('Are you sure you want to delete this index?')) {
            return;
        }
        if (action === 'flush' && !confirm('Are you sure you want to flush all documents from this index?')) {
            return;
        }

        Craft.sendActionRequest('POST', 'search-index/indexes/' + action, {
            data: { id: id }
        }).then(function(response) {
            if (action === 'delete') {
                location.reload();
            } else {
                Craft.cp.displayNotice(action === 'sync' ? 'Sync jobs queued.' : 'Index flushed.');
            }
        }).catch(function(error) {
            Craft.cp.displayError('Action failed.');
        });
    });
});
{% endjs %}
