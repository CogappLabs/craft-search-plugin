{% extends "search-index/_layouts/plugin" %}

{% set title = "Search Indexes"|t('search-index') %}
{% set selectedSubnavItem = 'indexes' %}

{% block actionButton %}
    <a href="{{ url('search-index/indexes/new') }}" class="btn submit">{{ "New Index"|t('search-index') }}</a>
{% endblock %}

{% block content %}
    {% do view.registerAssetBundle("cogapp\\searchindex\\web\\assets\\indexlist\\IndexListAsset") %}

    {% if indexes|length %}
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th>{{ "Name"|t('search-index') }}</th>
                    <th>{{ "Handle"|t('search-index') }}</th>
                    <th>{{ "Engine"|t('search-index') }}</th>
                    <th>{{ "Mode"|t('search-index') }}</th>
                    <th>{{ "Sections"|t('search-index') }}</th>
                    <th>{{ "Documents"|t('search-index') }}</th>
                    <th>{{ "Status"|t('search-index') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in indexes %}
                    {% set index = item.index %}
                    <tr>
                        <td>
                            <a href="{{ url('search-index/indexes/' ~ index.id) }}">
                                <strong>{{ index.name }}</strong>
                            </a>
                        </td>
                        <td><code>{{ index.handle }}</code></td>
                        <td>
                            {% set engineClass = index.engineType %}
                            {{ engineClass ? engineClass|split('\\')|last : '-' }}
                        </td>
                        <td>
                            {% if index.isReadOnly() %}
                                <span class="status-label blue">{{ "Read-only"|t('search-index') }}</span>
                            {% else %}
                                <span class="status-label green">{{ "Synced"|t('search-index') }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if index.sectionIds %}
                                {% for sectionId in index.sectionIds %}
                                    {% set section = craft.app.entries.getSectionById(sectionId) %}
                                    {% if section %}
                                        <span class="token">{{ section.name }}</span>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <span class="light">{{ "All"|t('search-index') }}</span>
                            {% endif %}
                        </td>
                        <td>{{ item.docCount ?? '-' }}</td>
                        <td>
                            {% if not index.enabled %}
                                <span class="status"></span> {{ "Disabled"|t('search-index') }}
                            {% elseif item.connected is same as(true) %}
                                <span class="status green" title="{{ 'Connected'|t('search-index') }}"></span> {{ "Connected"|t('search-index') }}
                            {% elseif item.connected is same as(false) %}
                                <span class="status red" title="{{ 'Connection error'|t('search-index') }}"></span> {{ "Error"|t('search-index') }}
                            {% else %}
                                <span class="status"></span> {{ "Unknown"|t('search-index') }}
                            {% endif %}
                        </td>
                        <td class="thin">
                            {% set menuItems = [] %}

                            {% if not index.isReadOnly() %}
                                {% set menuItems = menuItems|merge([
                                    {label: 'Field Mappings'|t('search-index'), url: url('search-index/indexes/' ~ index.id ~ '/fields')},
                                    {label: 'Sync'|t('search-index'), action: 'sync', id: index.id},
                                    {label: 'Flush'|t('search-index'), action: 'flush', id: index.id},
                                ]) %}
                            {% endif %}

                            {% set menuItems = menuItems|merge([
                                {label: 'Structure'|t('search-index'), url: url('search-index/indexes/' ~ index.id ~ '/structure')},
                            ]) %}

                            {% set menuItems = menuItems|merge([
                                {hr: true},
                                {label: 'Delete'|t('search-index'), action: 'delete', id: index.id, destructive: true, icon: 'remove'},
                            ]) %}

                            <button type="button" class="btn small menubtn" data-icon="settings" aria-label="{{ 'Actions'|t('search-index') }}"></button>
                            <div class="menu" data-index-id="{{ index.id }}">
                                <ul>
                                    {% for menuItem in menuItems %}
                                        {% if menuItem.hr is defined %}
                                            </ul><hr><ul>
                                        {% elseif menuItem.url is defined %}
                                            <li><a href="{{ menuItem.url }}">{{ menuItem.label }}</a></li>
                                        {% else %}
                                            <li>
                                                <button type="button"
                                                    class="menu-item{{ menuItem.destructive is defined ? ' error' : '' }}"
                                                    data-action="{{ menuItem.action }}"
                                                    data-id="{{ menuItem.id }}">
                                                    {{ menuItem.label }}
                                                </button>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="zilch">{{ "No indexes yet."|t('search-index') }} <a href="{{ url('search-index/indexes/new') }}">{{ "Create one."|t('search-index') }}</a></p>
    {% endif %}
{% endblock %}
