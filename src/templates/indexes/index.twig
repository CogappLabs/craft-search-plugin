{% extends "search-index/_layouts/plugin" %}

{% set title = "Search Indexes" %}
{% set selectedSubnavItem = 'indexes' %}

{% block actionButton %}
    <a href="{{ url('search-index/indexes/new') }}" class="btn submit">New Index</a>
{% endblock %}

{% block content %}
    {% do view.registerAssetBundle("cogapp\\searchindex\\web\\assets\\indexlist\\IndexListAsset") %}

    {% if indexes|length %}
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Handle</th>
                    <th>Engine</th>
                    <th>Mode</th>
                    <th>Sections</th>
                    <th>Documents</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in indexes %}
                    {% set index = item.index %}
                    <tr>
                        <td>
                            <a href="{{ url('search-index/indexes/' ~ index.id) }}">
                                <strong>{{ index.name }}</strong>
                            </a>
                        </td>
                        <td><code>{{ index.handle }}</code></td>
                        <td>
                            {% set engineClass = index.engineType %}
                            {{ engineClass ? engineClass|split('\\')|last : '-' }}
                        </td>
                        <td>
                            {% if index.isReadOnly() %}
                                <span class="status-label blue">Read-only</span>
                            {% else %}
                                <span class="status-label green">Synced</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if index.sectionIds %}
                                {% for sectionId in index.sectionIds %}
                                    {% set section = craft.app.entries.getSectionById(sectionId) %}
                                    {% if section %}
                                        <span class="token">{{ section.name }}</span>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <span class="light">All</span>
                            {% endif %}
                        </td>
                        <td>{{ item.docCount ?? '-' }}</td>
                        <td>
                            {% if not index.enabled %}
                                <span class="status"></span> Disabled
                            {% elseif item.connected is same as(true) %}
                                <span class="status green" title="Connected"></span> Connected
                            {% elseif item.connected is same as(false) %}
                                <span class="status red" title="Connection error"></span> Error
                            {% else %}
                                <span class="status"></span> Unknown
                            {% endif %}
                        </td>
                        <td class="thin">
                            {% set menuItems = [] %}

                            {% if not index.isReadOnly() %}
                                {% set menuItems = menuItems|merge([
                                    {label: 'Field Mappings', url: url('search-index/indexes/' ~ index.id ~ '/fields')},
                                    {label: 'Sync', action: 'sync', id: index.id},
                                    {label: 'Flush', action: 'flush', id: index.id},
                                ]) %}
                            {% endif %}

                            {% set menuItems = menuItems|merge([
                                {label: 'Structure', url: url('search-index/indexes/' ~ index.id ~ '/structure')},
                            ]) %}

                            {% set menuItems = menuItems|merge([
                                {hr: true},
                                {label: 'Delete', action: 'delete', id: index.id, destructive: true, icon: 'remove'},
                            ]) %}

                            <button type="button" class="btn small menubtn" data-icon="settings" aria-label="Actions"></button>
                            <div class="menu" data-index-id="{{ index.id }}">
                                <ul>
                                    {% for menuItem in menuItems %}
                                        {% if menuItem.hr is defined %}
                                            </ul><hr><ul>
                                        {% elseif menuItem.url is defined %}
                                            <li><a href="{{ menuItem.url }}">{{ menuItem.label }}</a></li>
                                        {% else %}
                                            <li>
                                                <button type="button"
                                                    class="menu-item{{ menuItem.destructive is defined ? ' error' : '' }}"
                                                    data-action="{{ menuItem.action }}"
                                                    data-id="{{ menuItem.id }}">
                                                    {{ menuItem.label }}
                                                </button>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="zilch">No indexes yet. <a href="{{ url('search-index/indexes/new') }}">Create one.</a></p>
    {% endif %}
{% endblock %}
