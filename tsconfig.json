{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src/web/assets",
    "declaration": false,
    "sourceMap": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["src/web/assets/**/*.ts"]
}
